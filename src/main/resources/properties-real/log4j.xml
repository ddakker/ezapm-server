<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="30 seconds">
	<!-- real -->
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/data/webroot/logs/ezapm-server/app.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/data/webroot/logs/ezapm-server/app.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<maxHistory>5</maxHistory><!-- month -->
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
	        <maxFileSize>50MB</maxFileSize>
	      </timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<pattern>%d [%-5level] [%thread] %logger{100}[%method:%line] - %msg %n</pattern>
		</encoder>
	</appender>
	

	<!-- Class Method 이동 경로 정보 -->



	<root level="INFO">
		<appender-ref ref="FILE" />
	</root>
</configuration>